    <script src="~/Angular/js/config/products.config.js"></script>
    <script src="~/Angular/js/config/service.config.js"></script>
    <script src="~/Angular/js/controllers/main.controller.js"></script>
    <script src="~/Angular/js/controllers/customers.controller.js"></script>
